{
  "name": "pricecalc",
  "version": "1.0.0",
  "description": "PriceCalc - Aplicación web para gestión de servicios y pagos",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup": "npm run install:all && cd backend && npm run prisma:generate && npm run prisma:migrate",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "dev:backend:win": "cd backend; npm run dev",
    "dev:frontend:win": "cd frontend; npm run dev",
    "dev:win": "concurrently \"npm run dev:backend:win\" \"npm run dev:frontend:win\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "react",
    "express",
    "prisma",
    "finance",
    "services"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "openai": "^5.12.2",
    "react-icons": "^5.5.0"
  }
}
